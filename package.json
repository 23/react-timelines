{
  "name": "react-timelines",
  "version": "2.6.1",
  "description": "React Timelines",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf lib coverage",
    "build:js": "tsc",
    "watch:js": "tsc -w",
    "build:css": "node-sass src/scss/style.scss lib/css/style.css",
    "watch:css": "node-sass -w src/scss/style.scss lib/css/style.css",
    "watch": "npm run watch:js & npm run watch:css",
    "build": "npm run clean && npm run build:js && npm run build:css",
    "test": "npm run lint && npm run unit",
    "lint": "npm run lint:prettier && npm run lint:ts",
    "lint:ts": "tslint --project .",
    "lint:ts:fix": "tslint --fix --project .",
    "lint:prettier": "prettier --list-different \"src/**/*.{ts,tsx}\"",
    "lint:prettier:fix": "prettier --write \"src/**/*.{ts,tsx}\"",
    "unit": "jest",
    "coverage": "jest --coverage --collectCoverageFrom='**/*.{js,jsx}'",
    "prepublish": "npm run clean && npm run build",
    "demo:deploy": "./demo/ops/deploy.sh"
  },
  "keywords": [
    "timeline",
    "schedule",
    "history",
    "react",
    "gantt",
    "horizontal",
    "library",
    "scroll",
    "scss",
    "sass",
    "tracks",
    "time"
  ],
  "repository": "git@github.com:JSainsburyPLC/react-timelines.git",
  "author": "JSainsburyPLC",
  "license": "MIT",
  "dependencies": {
    "prop-types": "^15.7.2"
  },
  "files": [
    "src",
    "lib"
  ],
  "devDependencies": {
    "@types/enzyme": "^3.9.3",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^24.0.11",
    "@types/prop-types": "^15.7.1",
    "@types/react": "^16.8.19",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.13.2",
    "jest": "^24.8.0",
    "node-sass": "^4.12.0",
    "prettier": "^1.17.1",
    "react": "^16.8.6",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^16.8.6",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.2.4"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16"
  },
  "jest": {
    "preset": "ts-jest",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "rootDir": "./src",
    "resetMocks": true,
    "resetModules": true,
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/utils/raf.ts",
      "<rootDir>/utils/events.ts",
      "<rootDir>/utils/computedStyle.ts",
      ".d.ts"
    ],
    "setupFiles": [
      "<rootDir>/setupTestFramework.ts"
    ]
  }
}

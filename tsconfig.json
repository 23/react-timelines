{
  "exclude": ["node_modules", "lib", "demo", "**/__tests__/*"],
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "declarationMap": true,
    "target": "es5",
    "rootDir": "src",
    "outDir": "lib",
    "jsx": "react"
  }
}
